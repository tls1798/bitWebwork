<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	                       http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	
	<display-name>Archetype Created Web Application</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>index</servlet-name>
		<servlet-class>com.bit.controller.IndexController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/index.html</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>empList</servlet-name>
		<servlet-class>com.bit.controller.EmpListController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>empList</servlet-name>
		<url-pattern>/emp/list.html</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>addEmp</servlet-name>
		<servlet-class>com.bit.controller.EmpAddController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addEmp</servlet-name>
		<url-pattern>/emp/add.html</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>oneEmp</servlet-name>
		<servlet-class>com.bit.controller.EmpOneController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>oneEmp</servlet-name>
		<url-pattern>/emp/detail.html</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>editEmp</servlet-name>
		<servlet-class>com.bit.controller.EmpEditController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>editEmp</servlet-name>
		<url-pattern>/emp/edit.html</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>delEmp</servlet-name>
		<servlet-class>com.bit.controller.EmpDelController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>delEmp</servlet-name>
		<url-pattern>/emp/delete.html</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.bit.controller.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login/index.html</url-pattern>
	</servlet-mapping>

</web-app>
